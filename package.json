{
  "name": "t-assistant",
  "description": "A blazing fast, lightweight tool for i18n: manage translation keys with ease.",
  "license": "MIT",
  "version": "0.0.1",
  "author": {
    "name": "Anton Samofal",
    "email": "anton.smfl@gmail.com",
    "url": "https://github.com/asamofal"
  },
  "private": false,
  "files": [
    "dist",
    "src"
  ],
  "bin": "dist/index.js",
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsup src/index.ts --watch --format esm --dts",
    "build": "tsup src/index.ts --format esm --dts",
    "release": "npm run build && changeset publish",
    "lint": "tsc && eslint",
    "format": "prettier --write \"**/*.{ts,js,json}\""
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.15.0",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@yikes2000/prettier-plugin-merge-extras": "^0.7.1-extras.4",
    "eslint": "9.14.0",
    "globals": "^15.12.0",
    "prettier": "^3.3.3",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0"
  }
}
